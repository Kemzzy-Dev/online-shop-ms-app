pipeline {
  agent {
    docker {image 'gradle'}
  }

  stages {

    stage('Checkout code') {
      steps {
        git branch: 'main', url: 'https://github.com/Kemzzy-Dev/online-shop-ms-app'
      }
    }

    stage('SonarQube analysis') {
      withSonarQubeEnv() {
        sh "./gradlew sonar"
      }
